<?xml version="1.0" encoding="utf-8"?>
<android.widget.FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/default_padding"
    android:layout_width="@dimen/default_preview_size"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/trailer_img"
        android:adjustViewBounds="true"
        android:contentDescription="@string/trailer_img_content_description"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/trailer_play"
        android:contentDescription="@string/trailer_play_content_description"
        android:elevation="4dp"
        android:src="@drawable/ic_play_circle_24dp"
        android:layout_gravity="center"
        android:layout_width="@dimen/default_preview_play"
        android:layout_height="@dimen/default_preview_play" />

</android.widget.FrameLayout>